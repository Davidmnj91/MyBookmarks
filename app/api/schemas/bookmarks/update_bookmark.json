{
  "title": "Create Bookmark schema",
  "description": "Schema to create a bookmark",
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "examples": [
    {
      "url": "http://www.host.com",
      "note": "A Note",
      "tags": ["Node", "DDD"]
    }
  ],
  "properties": {
    "url": {
      "$id": "#/properties/url",
      "type": "string",
      "format": "uri",
      "title": "The url of the bookmark",
      "examples": ["http://host.com"]
    },
    "note": {
      "$id": "#/properties/note",
      "type": "string",
      "title": "The note of the bookmark",
      "examples": ["A Note"]
    },
    "tags": {
      "$id": "#/properties/tags",
      "type": "array",
      "title": "The tags of the bookmark to classify",
      "default": [],
      "examples": ["Node", "DDD"],
      "items": {
        "$id": "#/properties/tags/items",
        "anyOf": [
          {
            "$id": "#/properties/tags/items/anyOf/0",
            "type": "string",
            "title": "A tag",
            "examples": ["Node", "DDD"]
          }
        ]
      }
    }
  }
}
